{
  "compilerOptions": {
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveValueImports": false,
    "target": "es6",
    "sourceMap": true,
    "lib": ["es6", "DOM"]
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
